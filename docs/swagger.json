{
    "swagger": "2.0",
    "info": {
        "description": "API para gestionar tickets usando Gin y MongoDB",
        "title": "Ticket System API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {

                },
                "id": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "utils.StandardResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "description": "Si hay error, se agrega; si no, se omite",
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
